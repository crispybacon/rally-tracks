                    "mapping": {
                        "type": "match_only_text"
                    },
                    "match": "message",
                    "match_mapping_type": "string"
                }
            },
            {
                "strings_as_keyword": {
                    "mapping": {
                        "ignore_above": 1024,
                        "type": "keyword"
                    },
                    "match_mapping_type": "string"
                }
            }
